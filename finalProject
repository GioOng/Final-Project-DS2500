    #data = clean_data('draft_data.csv')
    #recent = data[data['Draft_Yr'] >= 2000]
    #pick = pick_number_analysis(data)
    #pick = pick_number_analysis(recent)
    #college = college_attended_analysis(data)
    #team = nba_team_analysis(data)
    #print(data['allstar'])
main()
    
